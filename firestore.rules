rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to items collection
    match /items/{itemId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to users collection
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
